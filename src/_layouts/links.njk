---
layout: base
---

<header class="section spot-color-secondary">
    {% include 'svg/divider-waves-inverse.svg' %}
    <div class="section__inner region">
        <div class="wrapper flow">
            <section class="prose text-center">
                <h1 class="fade-in">{{ title }}</h1>
            </section>
        </div>
    </div>
    {% include 'svg/divider-waves.svg' %}
</header>
<article class="region page">
    <div class="wrapper flow prose">
        {{ content | safe }}
    </div>
</article>
<article class="wrapper region">
    {% set category = "" %}
    {% for feed in collections.subscriptions %}
        {% if feed.data.category != category %}
            {% set category = feed.data.category %}
            {% if category != "" %}</ul>{% endif %}
            <h2>{{ category }}</h2>
            <ul>
        {% endif %}
        <li><a href="{{ feed.data.site_url | url }}">{{ feed.data.title }}</a> ({{ feed.data.domain}})
            {%if feed.content %}<p>{{ feed.content | safe }}</p>{% endif %}
        </li>
    {% endfor %}
    </ul>
</article>